/* Codex Demo Stylesheet - Clean, minimal terminal theme */

:root {
    --fg: #ecf0f1;
    --fg-dim: #7f8c8d;
    --cyan: #00b4d8;
    --green: #2ecc71;
    --yellow: #f1c40f;
    --red: #e74c3c;
    --magenta: #9b59b6;
}

/* Remove borders from main panel for clean look */
#main Panel {
    border: none;
}

/* Header styling */
Row:first-child {
    background-color: #1a1a2e;
}

/* Text defaults */
TextElement {
    color: var(--fg);
}

/* Input styling */
TextInputElement {
    color: var(--fg);
}

/* List items - no highlight needed for conversation */
ListElement {
    border: none;
}

ListElement-item {
    background-color: transparent;
}

ListElement-item:selected {
    background-color: transparent;
}
